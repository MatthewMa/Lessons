<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<style name="placeholder">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:layout_weight">1</item>
	</style>
	<style name="subtitle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">30dp</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@android:color/holo_blue_bright</item>
		<item name="android:shadowColor">@color/trans_white2</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">6</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:gravity">center_horizontal</item>
	</style>
	<style name="dialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowIsFloating">true</item>
		<!-- set unfloated window -->
		<item name="android:windowFrame">@null</item>
		<!-- set none-frame -->
		<item name="android:windowNoTitle">true</item>
		<!-- set none-title -->
		<item name="android:windowBackground">@color/sc_transparent_background</item>
		<!-- set transparent -->
		<item name="android:backgroundDimEnabled">true</item>
		<!-- set dark -->
	</style>
	<style name="titlestyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">100dp</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:background">#1A2E42</item>
	</style>
	<style name="NextStyle">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@drawable/btn_green_selector</item>
		<item name="android:text">NEXT</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">22.0sp</item>
		<item name="android:id">@+id/btn_next</item>
		<item name="android:layout_gravity">right</item>
		<item name="android:layout_weight">1</item>
		<item name="android:drawableRight">@drawable/next</item>
	</style>
	<style name="PreviousStyle">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@drawable/btn_green_selector</item>
		<item name="android:text">PREVIOUS</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">22.0sp</item>
		<item name="android:id">@+id/btn_pre</item>
		<item name="android:layout_weight">1</item>
		<item name="android:drawableLeft">@drawable/previous</item>
	</style>
</resources>